<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".HomeActivity">
    <TextView
        android:id="@+id/activity_home_baslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bilişim Sistemleri Mühendisliği\nDers Programı Oluşturma"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/activity_home_btnProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Profili Düzenle   "
        android:onClick="profilOnClick"
        android:textSize="20sp"
        android:backgroundTint="@color/btnColor"
        android:layout_below="@+id/activity_home_baslik"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/activity_home_btnDersEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_home_btnProfil"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/btnColor"
        android:onClick="activity_home_dersEkleOnClick"
        android:text="       Ders Ekle        "
        android:textColor="@color/white"
        android:textSize="20sp" />
    <Button
        android:id="@+id/activity_home_dersProgramiDuzenle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btnColor"
        android:layout_below="@+id/activity_home_btnDersEkle"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:onClick="programDuzenleOnClick"
        android:textSize="20sp"
        android:text="Ders Programını Düzenle"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/activity_home_dersProgramiGoruntule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btnColor"
        android:layout_below="@+id/activity_home_dersProgramiDuzenle"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:onClick="programGoruntuleOnClick"
        android:textSize="20sp"
        android:text="Ders Programını Görüntüle"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/activity_home_btnCikis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btnRed"
        android:layout_below="@+id/activity_home_dersProgramiGoruntule"
        android:drawableRight="@drawable/baseline_exit_to_app_24"
        android:textColor="@color/white"
        android:onClick="cikisOnClick"
        android:layout_marginTop="19sp"
        android:layout_marginLeft="285dp"
        android:text="Çıkış"
        android:textAllCaps="false"
        android:textSize="20sp" />
    <Button
        android:id="@+id/activity_home_getData"
        android:text="Get Data"
        android:onClick="getDataOnClick"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_home_dersProgramiGoruntule"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/activity_home_SilSiniflar"
        android:text="Sil Sınıflar"
        android:onClick="silSinifOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_home_dersProgramiGoruntule"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textSize="20sp"/>


</RelativeLayout>